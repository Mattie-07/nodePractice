</div>
<body >
        <header>   
            <div class="headerClass">
                <div class="weekndText" > <a href="#">The Weeknd</a></div>
                <ul>
                    <li>
                    <a href="/">Home</a>
                    </li>
                    <li>
                    <a href="/albums">Albums</a>
                    </li>
                    <li >
                    <a href="/forums">Chat</a>
                    </li>
                    <li>
                    <a href="/forums">Reach Out</a>
                    </li>
                </ul>
            </div>
        </header>

    <div class = "albumContentContainerBlack">
        <div class="albumWrapper">
            <div class="albumRow">
                <div class="column1">
                    <div class="albumTextWrapper">
                        <p class="albumName">Trilogy</p>
                        <img class="imageDesign" src="/images/<%= coverPhoto[0] %>" alt="Trilogy Album">
                        <div class="buttonWrapper">
                            <a href="<%= apple[0] %>"><button class="buttonStyle">AppleMusic Preview</button></a>
                            <a href="<%= spotify[0] %>"><button class="buttonStyle">Spotify Preview</button></a>
                        </div>
                    </div>
                </div>
                <div class="column2"><%=summary[0] %> </div>
            </div>    
        </div>
    </div>
    
    <div class = "albumContentContainerWhite">
        <div class="albumWrapper">
            <div class="albumRow">
                <div class="column2">
                    <div class="albumTextWrapper">
                        <p class="albumName">Beauty Behind The Madness</p>
                        <img class="imageDesign" src="/images/<%= coverPhoto[1] %>" alt="Beauty Behind the Madness      Albumn cover art">
                        <div class="buttonWrapper">
                            <a href="<%= apple[1] %>"><button class="buttonStyle">AppleMusic Preview</button></a>
                            <a href="<%= spotify[1] %>"><button class="buttonStyle">Spotify Preview</button></a>
                        </div>
                    </div>
                </div>
                <div class="column3"><%=summary[1] %> </div>
            </div>    
        </div>
    </div>

    <div class = "albumContentContainerBlack">
        <div class="albumWrapper">
            <div class="albumRow">
                <div class="column3">
                    <div class="albumTextWrapper">
                        <p class="albumName">Starboy</p>
                        <img class="imageDesign" src="/images/<%= coverPhoto[2] %>" alt="StarBoy Album Cover">
                        <div class="buttonWrapper">
                            <a href="<%= apple[2] %>"><button class="buttonStyle">AppleMusic Preview</button></a>
                            <a href="<%= spotify[2] %>"><button class="buttonStyle">Spotify Preview</button></a>
                        </div>
                    </div>
                </div>
<div class="column2"><%=summary[2] %> </div>
            </div>    
        </div>
    </div>

    <div class = "albumContentContainerWhite">
        <div class="albumWrapper">
            <div class="albumRow">
                <div class="column2">
                    <div class="albumTextWrapper">
                        <p class="albumName">After Hours</p>
                        <img class="imageDesign" src="/images/<%= coverPhoto[3] %>" alt="AfterHours Albumn cover art">
                        <div class="buttonWrapper">
                            <a href="<%= apple[3] %>"><button class="buttonStyle">AppleMusic Preview</button></a>
                            <a href="<%= spotify[3] %>"><button class="buttonStyle">Spotify Preview</button></a>
                        </div>
                    </div>
                </div>
                <div class="column1"><%=summary[3] %> </div>
            </div>    
        </div>
    </div>
